<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCardCost"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text=" â€º "
        android:textAppearance="?android:attr/textAppearanceLarge" >

    </TextView>

    <TextView
        android:id="@+id/txtCardInitialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/txtCardExtraInformation"
        android:layout_below="@+id/txtCardExtraInformation"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="A long initialcard text blah blah blah blah blah"
        android:textAppearance="?android:attr/textAppearanceSmall" >

    </TextView>

    <TextView
        android:id="@+id/txtCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView2"
        android:text="A long card name to test layout"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffddaa"
        android:textStyle="bold" android:includeFontPadding="true" android:singleLine="true">

    </TextView>

    <TextView
        android:id="@+id/txtCardExtraInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCardName"
        android:layout_alignRight="@+id/txtCardName"
        android:layout_below="@+id/txtCardName"
        android:text="for pre POT FOR CEL cel PRE THA tha"
        android:textAppearance="?android:attr/textAppearanceSmall" android:singleLine="true" android:cursorVisible="true">

    </TextView>

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView3"
        android:clickable="true"
        android:src="@drawable/btn_star_big_off" >
    </ImageView>

    <TextView
        android:id="@+id/txtCardCost"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCardExtraInformation"
        android:layout_toLeftOf="@+id/textView3"
        android:gravity="center|right"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCardCost"
        android:layout_alignBottom="@+id/txtCardCost"
        android:layout_toLeftOf="@+id/txtCardCost"
        android:text="Capacity:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtCardGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCardCost"
        android:layout_alignLeft="@+id/txtCardCost"
        android:layout_toLeftOf="@+id/textView3"
        android:gravity="center|right"
        android:text="11"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:text="Group:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imgEditDeckCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgFavorite"
        android:src="@drawable/btn_deck_cards" />

</RelativeLayout>