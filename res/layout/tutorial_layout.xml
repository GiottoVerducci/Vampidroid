<FrameLayout android:id="@+id/tutorial_layout" android:layout_width="match_parent"
    	android:layout_height="match_parent" android:visibility="gone">
    <RelativeLayout android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
    
    	<ImageView android:id="@+id/arrow_up" android:layout_width="wrap_content"
    		android:layout_height="wrap_content" android:src="@drawable/arrow_up"  android:layout_marginLeft="5dip"/>
