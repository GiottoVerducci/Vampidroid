<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent">
		<Button android:layout_height="wrap_content"
			android:layout_width="200dip" android:background="@drawable/button_shape"
			android:id="@+id/button1"
			android:text="You can swipe through card lists or you can tap the header names"
			android:textColor="#ff000000" android:padding="12dip"
			android:layout_below="@+id/button2" android:layout_alignLeft="@+id/relativeLayout2"
			android:layout_marginLeft="50dp" android:layout_marginTop="93dp"></Button>
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:background="@drawable/button_shape"
			android:id="@+id/button2" android:text="Card details will appear here"
			android:textColor="#ff000000" android:padding="12dip"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			android:layout_marginRight="262dp"></Button>
		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/relativeLayout1"
			android:layout_alignParentTop="true" android:layout_alignLeft="@+id/button1"
			android:layout_marginLeft="34dp">
			<ImageView android:layout_height="wrap_content" android:id="@+id/arrow_left"
				android:layout_width="wrap_content" android:src="@drawable/arrow_left"
				android:layout_marginLeft="5dip"></ImageView>
			<Button android:layout_height="wrap_content"
				android:layout_width="300dip" android:background="@drawable/button_shape"
				android:text="Press app icon to go back home" android:textColor="#ff000000"
				android:layout_toRightOf="@+id/arrow_left" android:padding="12dip"></Button>
		</RelativeLayout>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/relativeLayout2"
		android:layout_below="@+id/relativeLayout1" android:layout_alignParentLeft="true" android:layout_marginTop="67dp">
		<ImageView android:layout_height="wrap_content" android:id="@+id/arrow_up"
			android:layout_width="wrap_content" android:src="@drawable/arrow_up"
			android:layout_marginLeft="45dip"></ImageView>
		<Button android:layout_height="wrap_content" android:layout_width="120dip" android:background="@drawable/button_shape" android:text="Filter cards by name, clan, discipline, type..." android:layout_below="@+id/arrow_up" android:textColor="#ff000000" android:padding="12dip"></Button>
	</RelativeLayout>

	</RelativeLayout>
</merge>

