                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesPoliticalAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Political Action"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesPoliticalAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesPoliticalAction"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Power"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesPower"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Reaction"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesReaction"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesRetainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Retainer"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <!--Reference: Background transparent:-->
                <!--http://stackoverflow.com/questions/35625620/listview-item-with-checkbox-how-to-remove-checkbox-ripple-effect-->
                <CheckBox
                    android:id="@+id/checkBoxCardTypesRetainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

        </LinearLayout>

    </com.github.florent37.expansionpanel.ExpansionLayout>
</merge>