                app:layout_widthPercent="15%" />


        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            
            android:paddingLeft="11dp"
            android:paddingStart="11dp">


            <TextView
                android:id="@+id/textCardTypesRetainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Retainer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_widthPercent="85%" />

            <!--Reference: Background transparent:-->
            <!--http://stackoverflow.com/questions/35625620/listview-item-with-checkbox-how-to-remove-checkbox-ripple-effect-->
            <CheckBox
                android:id="@+id/checkBoxCardTypesRetainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:checked="false"
                android:clickable="false"
                app:layout_widthPercent="15%" />


