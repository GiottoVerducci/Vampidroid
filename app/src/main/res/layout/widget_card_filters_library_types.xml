<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.github.florent37.expansionpanel.ExpansionHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        app:expansion_headerIndicator="@id/headerIndicator"
        app:expansion_layout="@id/expansionLibraryTypesLayout"
        app:expansion_toggleOnClick="true">

        <RelativeLayout
            android:id="@+id/cardTypesHeader"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/textCardTypes"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Card Types:"
                android:textColor="#DF000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <android.support.v7.widget.AppCompatImageView
                android:adjustViewBounds="true"
                android:id="@+id/headerIndicator"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

        </RelativeLayout>

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/expansionLibraryTypesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/cardTypesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Action"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesAction"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesActionModifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Action Modifier"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesActionModifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesActionModifier"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesAlly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Ally"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesAlly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesAlly"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesCombat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Combat"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesCombat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesCombat"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesConviction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Conviction"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesConviction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesConviction"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesEquipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Equipment"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_widthPercent="85%" />

                <CheckBox
                    android:id="@+id/checkBoxCardTypesEquipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textCardTypesEquipment"
                    android:background="@android:color/transparent"
                    android:checked="false"
                    android:clickable="false"
                    app:layout_widthPercent="15%" />


            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"

                android:paddingLeft="11dp"
                android:paddingStart="11dp">


                <TextView
                    android:id="@+id/textCardTypesEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Event"
                    android:textAppearance="?android:attr/textAppearanceMedium"
